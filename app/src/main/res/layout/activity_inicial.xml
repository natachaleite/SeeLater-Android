<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    android:theme="@style/AppThemeNoActionBar"
    tools:context="com.formobile.seelater.InicialActivity">



    <TextView
        android:text="Tenho:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="54dp"
        android:id="@+id/txt1tela3"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/label_azul"
        android:id="@+id/labelLivros"
        android:layout_above="@+id/labelFilmes"
        android:layout_alignLeft="@+id/txt1tela3"
        android:layout_alignStart="@+id/txt1tela3"
        android:layout_marginBottom="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/label_vermelha"
        android:id="@+id/labelFilmes"
        android:layout_above="@+id/labelSeries"
        android:layout_alignLeft="@+id/labelLivros"
        android:layout_alignStart="@+id/labelLivros" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/label_verde"
        android:id="@+id/labelSeries"
        android:layout_below="@+id/txtFilmes"
        android:layout_alignLeft="@+id/labelFilmes"
        android:layout_alignStart="@+id/labelFilmes"
        android:layout_marginTop="13dp" />

    <TextView
        android:text="sÃ©rie(s)"
        android:textColor="@color/cor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSeries"
        android:textSize="30sp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_alignBottom="@+id/labelSeries"
        android:layout_alignLeft="@+id/txtFilmes"
        android:layout_alignStart="@+id/txtFilmes" />

    <TextView
        android:text="livro(s)"
        android:textColor="@color/cor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLivros"
        android:textSize="30sp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_alignBottom="@+id/labelLivros"
        android:layout_toRightOf="@+id/txt1tela3"
        android:layout_toEndOf="@+id/txt1tela3"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:text="filme(s)"
        android:textColor="@color/cor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFilmes"
        android:textSize="30sp"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_marginTop="97dp"
        android:layout_below="@+id/txt1tela3"
        android:layout_alignLeft="@+id/txtLivros"
        android:layout_alignStart="@+id/txtLivros" />

    <TextView
        android:text="0"
        android:textColor="@color/cor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumFilmes"
        android:layout_alignBaseline="@+id/txtFilmes"
        android:layout_alignBottom="@+id/txtFilmes"
        android:layout_alignLeft="@+id/txtNumLivros"
        android:layout_alignStart="@+id/txtNumLivros"
        android:textSize="30sp" />

    <TextView
        android:text="0"
        android:textColor="@color/cor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumLivros"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/txtLivros"
        android:layout_alignBottom="@+id/txtLivros"
        android:layout_toRightOf="@+id/txt1tela3"
        android:layout_toEndOf="@+id/txt1tela3" />

    <TextView
        android:text="para serem\nvistos."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt5tela3"
        android:textSize="36sp"
        android:layout_below="@+id/labelSeries"
        android:layout_alignLeft="@+id/labelSeries"
        android:layout_alignStart="@+id/labelSeries"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="0"
        android:textColor="@color/cor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNumSeries"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/txtSeries"
        android:layout_alignBottom="@+id/txtSeries"
        android:layout_alignLeft="@+id/txtNumFilmes"
        android:layout_alignStart="@+id/txtNumFilmes" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/menuLateral"
        android:background="@color/cor5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icone_livro"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/labelCadastraLivro"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icone_filme"
            android:id="@+id/labelCadastraFilme"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/labelCadastraLivro"
            android:layout_marginBottom="12dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icone_serie"
            android:id="@+id/labelCadastraSerie"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/labelCadastraFilme"
            android:layout_marginBottom="12dp" />
    </RelativeLayout>

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCadastra"
        android:layout_below="@+id/txt5tela3"
        android:layout_alignRight="@+id/txtSeries"
        android:layout_alignEnd="@+id/txtSeries" />
</RelativeLayout>
